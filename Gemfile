source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails',   '4.0.3'

### database
gem 'mongoid', '4.0.0.alpha1'
gem 'mongoid_rails_migrations'
gem 'mongoid_search'
gem 'bson_ext'

### app
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'turbolinks'
gem 'devise_invitable'
gem 'devise', '>= 3', '< 4'
gem 'rabl'
gem 'prawn', '~> 1.0.0.rc2'
gem 'figaro'
gem 'redis'

### server
gem 'foreman'
gem 'puma'
gem 'newrelic_rpm'
gem 'analytics-ruby', '<1.0'

### testing/dev
group :development, :test do 
  gem 'capistrano'
  gem 'capistrano-rbenv'

  gem 'rake'
  gem 'rspec-rails'
  gem 'guard-rspec', require: false
  gem 'mongoid-rspec'
  gem 'pry'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
  gem 'jasmine-rails'
  gem 'capybara'
  
  gem 'quiet_assets'
end
