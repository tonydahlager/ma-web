<div class="box draggable">
  <div class="panel panel-default attributes" data-context="<%= direction.context.to_s %>" data-object="direction" data-id="<%= direction.id.to_s %>">
    <div class="panel-heading">
      <span class="label label-primary">Direction</span>&nbsp;&nbsp;<%= direction.approach %>
    </div>
    <div class="panel-body">
      <p><b>Content:&nbsp;</b><%= direction.content %></p>
      <div class="actions">
        <%= link_to 'Edit', edit_admin_topic_question_direction_path(@topic, @question, direction), { class: 'ma-link' }%>
        <%= link_to 'Delete', admin_topic_question_direction_path(@topic, @question, direction), { class: 'ma-link', method: :delete }%>
      </div>
    </div>
  </div>
</div>
