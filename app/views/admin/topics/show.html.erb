<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @topic.description %>
</p>

<%= list_group_topic_names(@topic).html_safe %>

<br />

<%= link_to 'PDF', admin_topic_path(@topic, format: 'pdf'), { class: 'ma-link'} %>
<%= link_to 'Edit', edit_admin_topic_path(@topic), { class: 'ma-link'} %>
<%= link_to 'Back to all Topics', admin_topics_path, {class: 'ma-link'} %>
<br>
<br>
<br>

<%= render partial: 'bridges_list',     locals: {topic: @topic, bridges: @topic.bridges} %>
<%= render partial: 'questions_list',   locals: {topic: @topic, questions: @topic.questions} %>
<%= render partial: 'directions_list',  locals: {topic: @topic, directions: @topic.directions} %>
<%= render partial: 'links_list',       locals: {topic: @topic, links: @topic.links} %>
