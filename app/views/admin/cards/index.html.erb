<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  

  <% @cards.each do |card| %>
    <tr>
      <td><%= card.title %></td>
      <td><%= card.description %></td>
      <td><%= link_to 'Show', admin_card_path(card) %></td>
      <td><%= link_to 'Edit', edit_admin_card_path(card) %></td>
      <td><%= link_to 'Delete', admin_card_path(card), method: :delete %></td>
    </tr>

  <% end %>
</table>

<%= link_to 'New Card', new_admin_card_path %>
