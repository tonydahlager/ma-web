<h1>Listing bridges</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bridges.each do |bridge| %>
      <tr>
        <td><%= bridge.content %></td>
        <td><%= link_to 'Show', [:admin, bridge] %></td>
        <td><%= link_to 'Edit', edit_admin_bridge_path(bridge) %></td>
        <td><%= link_to 'Destroy', [:admin, bridge], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

