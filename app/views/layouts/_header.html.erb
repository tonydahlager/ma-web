<%= link_to 'Varkek', '/cards', class: 'brand' %>
<% if user_signed_in? %>
  <ul class='nav'>
    <li>
      <%= link_to 'Cards', cards_path %>
    </li>
  </ul>
  <div class='pull-right'>
    <ul class='nav'>
      <li>
        <%= link_to 'Edit account', edit_user_registration_path(current_user) %>
      </li>
      <li>
        <%= link_to 'Logout', destroy_user_session_path, method: 'delete' %>
      </li>      
    </ul>
  </div>
<% else %>
  <ul class='nav'>
    <li>
      <%= link_to 'Cards', cards_path %>
    </li>
  </ul>
<% end %>
